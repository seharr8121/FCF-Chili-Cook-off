      margin: 20px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      padding: 10px;
    }

    h1 {
      text-align: center;
      color: #b22222;
    }

    .field {
      margin-bottom: 20px;
    }

    label {
      display: block;
      font-size: 1.1em;
      margin-bottom: 6px;
    }

    select {
      width: 100%;
      padding: 10px;
      font-size: 1em;
    }

    button {
      width: 100%;
      padding: 15px;
      font-size: 1.2em;
      background: #b22222;
      color: white;
      border: none;
      border-radius: 6px;
      margin-top: 10px;
    }

    button:active {
      opacity: 0.8;
    }

    #results {
      margin-top: 30px;
      font-size: 1.1em;
    }

    .result-row {
      padding: 8px 0;
      border-bottom: 1px solid #ccc;
    }
  </style>
